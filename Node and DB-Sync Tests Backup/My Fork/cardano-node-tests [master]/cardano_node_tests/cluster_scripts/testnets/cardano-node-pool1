#!/usr/bin/env bash
choice() { i=$1; shift; eval "echo \${$((i + 1))}"; }
echo "Starting cardano-node run: cardano-node run"
   echo "--config ./state-cluster%%INSTANCE_NUM%%/config-pool1.json"
   echo "--database-path ./state-cluster%%INSTANCE_NUM%%/db-pool1"
   echo "--topology ./state-cluster%%INSTANCE_NUM%%/topology-pool1.json"
   echo "--host-addr 127.0.0.1"
   echo "--port %%NODE_PORT_BASE%%4"
   echo "--socket-path ./state-cluster%%INSTANCE_NUM%%/pool1.socket"
   echo "--shelley-vrf-key ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/vrf.skey"
   echo "--shelley-kes-key ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/kes.skey"
   echo "--shelley-operational-certificate ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/op.cert"
echo "..or, once again, in a single line:"
echo "cardano-node run --config ./state-cluster%%INSTANCE_NUM%%/config-pool1.json --database-path ./state-cluster%%INSTANCE_NUM%%/db-pool1 --topology ./state-cluster%%INSTANCE_NUM%%/topology-pool1.json --host-addr 127.0.0.1 --port %%NODE_PORT_BASE%%4 --socket-path ./state-cluster%%INSTANCE_NUM%%/pool1.socket --shelley-vrf-key ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/vrf.skey --shelley-kes-key ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/kes.skey --shelley-operational-certificate ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/op.cert"


exec cardano-node run --config ./state-cluster%%INSTANCE_NUM%%/config-pool1.json --database-path ./state-cluster%%INSTANCE_NUM%%/db-pool1 --topology ./state-cluster%%INSTANCE_NUM%%/topology-pool1.json --host-addr 127.0.0.1 --port %%NODE_PORT_BASE%%4 --socket-path ./state-cluster%%INSTANCE_NUM%%/pool1.socket --shelley-vrf-key ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/vrf.skey --shelley-kes-key ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/kes.skey --shelley-operational-certificate ./state-cluster%%INSTANCE_NUM%%/nodes/node-pool1/op.cert
